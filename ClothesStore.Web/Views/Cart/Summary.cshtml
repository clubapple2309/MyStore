@model ClothesStore.DB.Entities.Cart

<div class="navbar-right">
    @Html.ActionLink("To order", "Index", "Cart",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-default navbar-btn" })
</div>

<div class="navbar-text navbar-right">
    <b>Your Cart:</b>
    @Model.Lines.Sum(x => x.Quantity) 
    @if (Model.Lines.Sum(x => x.Quantity) < 2) {<b>Thing </b>}
    else { <b>Things </b> },
    @Model.ComputeTotalValue().ToString("# $")
</div>
