@model IEnumerable<ClothesStore.DB.Entities.Product>

@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>List</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Delete</th>
                <th class="text-center">Edit</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td class="text-right">@item.Price.ToString("# $")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ProductId", item.ProductId)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }
                    </td>
                    <td class="text-center">@Html.ActionLink("Edit", "Edit", new { item.ProductId },
                                           new { @class = "btn btn-default btn-xs" })</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Create new Product", "Create", null,
            new { @class = "btn btn-default" })
        @Html.ActionLink("To Main Menu ", "List", "Product", null,
       new { @class = "btn btn-primary" })
    </div>
</div>
